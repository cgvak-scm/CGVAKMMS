@using MMS.Models
@{
    ViewBag.Title = "Forgot Password";
}

<style>
    .row {
        position: fixed;
        top: 50%;
        left: 50%;
        margin-top: -195px; /*set to a negative number 1/2 of your height*/
        margin-left: -164px; /*set to a negative number 1/2 of your width*/
        height: 400px;
        width: 328px;
        /*margin: 0 auto 25px;*/
        padding: 4px;
        border: 0px solid;
        border-radius: 5px 5px 5px 5px;
        behavior: url(/Styles/ie-css3.htc);
        background: rgba(226, 226, 226, 0.7) none repeat scroll 0 0;
        box-shadow: 0px 4px 10px 1px #757070;
        -webkit-box-shadow: 0px 4px 10px 1px #757070;
        -moz-box-shadow: 0px 4px 10px 1px #757070;
        -o-box-shadow: 0px 4px 10px 1px #757070;
    }

    .ForgotPsw-form_header {
        text-align: center;
        padding: 15px;
        font-weight: bold;
        -moz-box-sizing: border-box;
        background-color: #0E90D2;
        background-image: linear-gradient(to bottom, #149BDF, #0480BE);
        background-repeat: repeat-x;
        box-shadow: 0 -1px 0 rgba(0, 0, 0, 0.15) inset;
        color: #FFFFFF;
        font-size: 17px;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6);
        transition: width 0.6s ease 0s;
        border-radius: 5px 5px 0px 0px;
        border: 0px solid;
    }

    .ForgotPsw-form_header p {
        margin-bottom: 0px;
        margin-top: 0;
    }

    .ForgotPsw-form img {
        height: 130px;
        margin-top: 8px;
        width: 130px;
    }
</style>

<script>
    function Validate() {
        var data = document.getElementById("txtEmailID").value;
        if (data == "") {
            alert("Please enter your email id.");
            return false;
        } else {
            return true;
        }
    }
</script>
<div class="row">
    <section id="ForgotPassword">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken();
        <div class="ForgotPsw-form">
            <div class="ForgotPsw-form_header">
                <p>Forgot Password</p>
            </div>
            <br /> 
            <center>
                <img src="../Content/Images/forgotpassword.png" class="img-circle img-thumbnail" />
            </center>
            <br /><br />
            <div style="margin: 9px 10px; ">
                <input class="form-control" data-val="true" data-val-required="The Corporate Mail Id is required." id="txtEmailID" name="txtEmailID" placeholder="Enter Your Mail Id" value="" type="text" autocomplete="off">
                <span class="field-validation-valid" data-valmsg-for="txtEmailID" data-valmsg-replace="true"></span>
            </div>
            <div>                
                <div style="margin: 9px 10px; ">
                    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Submit" onclick="javascript: return Validate();" /><br />
                </div>
                @if (ViewBag.Message == 1)
                {
                    <center><span style="color:green;">Please check your email for account login detail.</span></center>
                }
                else if (ViewBag.Message == 0)
                {
                    <center><span style="color:red;">Please provide a valid register email id.</span></center>
                }
            </div>
        </div>
            
        }
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}