@model dynamic

<div class="modal-header" id="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <b>Attachment files</b>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <div class="modal-body">
            <div class="form-inline">
                @{
                    foreach (var item in ViewBag.Attachments)
                    {
                        <a href="@Url.Action("Download","AttachMent",new { fileName= item.MMS_FileName })">@item.MMS_FileName</a><br />

                    }
                }
                <p>Click the above file to Download</p>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <p id="resMsg" style="color:forestgreen;"></p>
    @*<button type="button" class="btn btn_close btn-default" data-dismiss="modal">Close</button>
    <input type="button" class="btn btn-primary btnSave" onclick="CloseSave()" value="Save" id="_save" />*@
</div>


